<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% unless avatar_url.nil? %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>


        <small>
        <% if @user.posts.any? %>
          <%= @user.name %> has <%= pluralize(@user.posts.count, 'post') %> and
        <% else %>
          <%= @user.name %> does not yet have any posts.
        <% end %>
        <br>

        <% if @user.comments.any? %>
           has <%= pluralize(@user.comments.count, 'comment') %>
        <% else %>
          <%= @user.name %> does not yet have any comments.
        <% end %>
        </small>

      </div>
    </div>
  </div>
</div>

<% if @user.posts.any? %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% end %>

<% if @user.comments.any? %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% end %>

<% if @user.favorites.any? %>
  <h2> Favorite Posts </h2>
  <% @user.favorites.each do |favorite| %>

    <div class="row">
      <div class="col-md-8">
        <div class="media">
          <br />
          <% avatar_url = User.avatar_url(@user, 64) %>
          <% unless avatar_url.nil? %>
            <div class="media-left">
              <%= image_tag avatar_url, class: 'media-object' %>
            </div>
          <% end %>
          <div class="media-body">
            <h3 class="media-heading"> <%= render partial: 'posts/post', locals: { post: favorite.post } %> </h3>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
